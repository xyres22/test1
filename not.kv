
MDFloatLayout:
    MDCard:
        size_hint:.93,.95
        pos_hint:{'center_x':.5,'center_y':.5}
        elevation:4 
        MDFloatLayout:
            Image:
                source:'Reminder.png'             
                pos_hint:{'center_x':.5,'center_y':.93} 
            MDScrollView:
                pos_hint:{'center_x':.5,'center_y':.5}
                size_hint:.9,.75
                MDList:
                    id:list
            MDFloatingActionButton:
                icon:'plus-thick'
                pos_hint:{'center_x':.5,'center_y':.06}
                size_hint:.18,.09
                on_release:app.add_dialog()
                md_bg_color: 232/255,0/255,0/255,.8

<ItemWidget>:
    id:item
    text:''
    on_release:root.info_dial()
    IconLeftWidget:
        icon: "border-color"
        on_release:root.edit_dial()
    IconRightWidget:
        icon:'trash-can-outline'
        on_release:root.remove_dial()


<Content>:
    size_hint:1,None
    height:'150dp'
    MDTextField:
        id:title1
        text:''
        hint_text:'Title'
        write_tab:False
        multiline:False
        pos_hint:{'center_x':.5,'center_y':.97}
        helper_text_mode: "on_error"
    MDTextField:
        multiline:True
        id:details1
        text:''
        hint_text:'Details..'
        write_tab:False
        size_hint:1,.425
        pos_hint:{'center_x':.5,'center_y':.6}
    MDLabel:
        id:date
        text:''
        size_hint:.6,1
        pos_hint:{'center_x':.3,'center_y':.35}
    MDIconButton:
        icon:'calendar'
        on_release:root.show_date_picker()
        pos_hint:{'center_x':.7,'center_y':.35}
    MDLabel:
        id:time
        text:''
        size_hint:.6,1
        pos_hint:{'center_x':.3,'center_y':.12}
    MDIconButton:
        icon:'alarm-check'
        on_release:root.show_time_picker()
        pos_hint:{'center_x':.7,'center_y':.12}


<DetailsContent>:
    size_hint:1,None
    height:'150dp'
    MDScrollView:
        pos_hint:{'center_x':.5,'center_y':.6}
        adaptive_height:True
        MDLabel:
            id:detailsname
            text:''
            adaptive_height:True
            pos_hint:{'center_x':.5,'center_y':.5}
            halign:'center'
    

<EditContent>:
    size_hint:1,None
    height:'170dp'
    MDScrollView:
        adaptive_height:True
        pos_hint:{'center_x':.5,'center_y':.79}
        size_hint:1,None
        height:'115dp'
        MDTextField:
            id:edittext
            text:''
            multiline:True
            #adaptive_height:True
            #pos_hint:{'center_x':.5,'center_y':.65}
    MDLabel:
        id:editdate
        text:''
        size_hint:.6,1
        pos_hint:{'center_x':.3,'center_y':.35}
    MDIconButton:
        icon:'calendar'
        on_release:root.show_date()
        pos_hint:{'center_x':.7,'center_y':.35}
    MDLabel:
        id:edittime
        text:''
        size_hint:.6,1
        pos_hint:{'center_x':.3,'center_y':.12}
    MDIconButton:
        icon:'alarm-check'
        on_release:root.show_time()
        pos_hint:{'center_x':.7,'center_y':.12}
